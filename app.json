{
  "name": "afro-renaissance",
  "description": "A platform for Africa's economic and social transformation",
  "keywords": [
    "python",
    "django",
    "social platform"
  ],
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": {
      "description": "Django settings module",
      "value": "afro_renaissance.settings"
    },
    "DJANGO_SECRET_KEY": {
      "description": "A secret key for Django's cryptographic signing",
      "generator": "secret"
    },
    "DJANGO_DEBUG": {
      "description": "Debug mode",
      "value": "False"
    },
    "DJANGO_ALLOWED_HOSTS": {
      "description": "Allowed hosts",
      "value": ".ondigitalocean.app"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic-xxs"
    }
  },
  "scripts": {
    "postdeploy": "python scripts/post_deploy.sh"
  }
}